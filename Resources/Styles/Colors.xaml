    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Space Theme Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="Secondary">#1A1F3A</Color>
    <Color x:Key="Tertiary">#94A3B8</Color>

    <!-- Background Colors -->
    <Color x:Key="SpaceBlack">#0B0D17</Color>
