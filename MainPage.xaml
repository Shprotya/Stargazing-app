<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="StargazingApp.MainPage"
             BackgroundColor="{StaticResource SpaceBlack}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header -->
            <Label Text="🌟 Stargazing"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource StarWhite}"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

            <!-- NASA Astronomy Picture of the Day Section -->
            <Frame BackgroundColor="{StaticResource DeepSpaceBlue}"
                   BorderColor="{StaticResource NebulaPurple}"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <Label Text="NASA Picture of the Day"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource StarWhite}"/>

                    <Button x:Name="LoadApodButton"
                            Text="Load Today's Picture"
                            BackgroundColor="{StaticResource NebulaPurple}"
                            TextColor="{StaticResource StarWhite}"
                            Clicked="OnLoadApodClicked"
                            CornerRadius="10"
                            HeightRequest="50"/>

                    <!-- Loading Indicator -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsRunning="False"
                                       IsVisible="False"
                                       Color="{StaticResource NebulaPurple}"
                                       HeightRequest="40"/>

                    <!-- Title -->
                    <Label x:Name="TitleLabel"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource StarWhite}"
                           LineBreakMode="WordWrap"/>

                    <!-- Date -->
                    <Label x:Name="DateLabel"
                           FontSize="14"
                           TextColor="{StaticResource CosmicGray}"
                           LineBreakMode="WordWrap"/>

                    <!-- Image -->
                    <Frame Padding="0"
                           CornerRadius="10"
                           IsClippedToBounds="True"
                           BorderColor="Transparent"
                           x:Name="ImageFrame"
                           IsVisible="False">
                        <Image x:Name="ApodImage"
                               Aspect="AspectFit"
                               HeightRequest="300"/>
                    </Frame>

                    <!-- Copyright -->
                    <Label x:Name="CopyrightLabel"
                           FontSize="12"
                           TextColor="{StaticResource CosmicGray}"
                           LineBreakMode="WordWrap"
                           IsVisible="False"/>

                    <!-- Explanation -->
                    <Frame BackgroundColor="#1E293B"
                           Padding="10"
                           CornerRadius="8"
                           BorderColor="Transparent"
                           x:Name="ExplanationFrame"
                           IsVisible="False">
                        <Label x:Name="ExplanationLabel"
                               FontSize="14"
                               TextColor="{StaticResource CosmicGray}"
                               LineBreakMode="WordWrap"/>
                    </Frame>

                    <!-- Error Message -->
                    <Label x:Name="ErrorLabel"
                           FontSize="14"
                           TextColor="#EF4444"
                           LineBreakMode="WordWrap"
                           IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
