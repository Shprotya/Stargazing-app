<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="StargazingApp.Views.MainPage"
             BackgroundColor="{StaticResource Main}">

    <ScrollView>
        <Grid ColumnDefinitions="2*, *" ColumnSpacing="20" Padding="20">

            <Frame Grid.Column="0" 
               BackgroundColor="{StaticResource Sections}"
               CornerRadius="15" Padding="15">
                <VerticalStackLayout Spacing="15">

                    <ActivityIndicator x:Name="LoadingIndicator"
                       IsRunning="{Binding IsBusy}"
                       IsVisible="{Binding IsBusy}"
                       Color="{StaticResource NovaPurple}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />

                    <Label Text="NASA Picture of the Day" 
                           FontSize="20" 
                           FontAttributes="Bold"/>

                    <Label Text="{Binding ApodData.Title}" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding ApodData.Date}" 
                           FontSize="14" 
                           TextColor="{StaticResource OrbitGray}"/>

                    <Frame x:Name="ImageFrame" 
                           Padding="0" 
                           IsClippedToBounds="True" >
                        
                        <Image Source="{Binding ApodData.Url}" 
                               Aspect="AspectFit" 
                               HeightRequest="300"/>
                    </Frame>

                    <Label FontSize="12" 
                           Text="{Binding ApodData.Copyright}"
                           TextColor="{StaticResource OrbitGray}"/>

                    <Frame x:Name="ExplanationFrame" 
                           BackgroundColor="{StaticResource Sections}" >
                        <Label Text="{Binding ApodData.Explanation}" FontSize="14"/>
                    </Frame>

                    <!-- Error Message -->
                    <Label x:Name="ErrorLabel"
                       Text="{Binding ErrorMessage}"
                       IsVisible="{Binding HasError}"
                       FontSize="14"
                       TextColor="#EF4444"
                       HorizontalOptions="Center"
                       LineBreakMode="WordWrap"
                       Margin="0,10,0,0"/>      

                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Grid.Column="1" Spacing="20">

                <Frame BackgroundColor="{StaticResource Sections}" CornerRadius="15" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Moon Phase" FontSize="18" FontAttributes="Bold"/>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="🌙" FontSize="30"/>
                            <VerticalStackLayout>
                                <Label Text="Waxing Gibbous" FontAttributes="Bold"/>
                                <Label Text="Illumination: 78%" FontSize="12" TextColor="{StaticResource OrbitGray}"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        <Label Text="Visibility: Excellent" FontSize="12" Margin="0,5,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="{StaticResource Sections}" CornerRadius="15" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Upcoming Events" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="• Meteor Shower (Dec 14)" FontSize="13"/>
                        <Label Text="• New Moon (Dec 30)" FontSize="13"/>
                        <Label Text="• Mars Conjunction" FontSize="13"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
